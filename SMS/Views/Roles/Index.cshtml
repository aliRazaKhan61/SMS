@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles</h1>
<form method="post" asp-action="AddRole" asp-controller="Roles">
    <div class="input-group">
        <input name="roleId" hidden id="txtRoleId"/>
        <input name="roleName" id="txtRolename" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add/Update</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td hidden>@role.Id</td>
                <td>@role.Name</td>
                <td><button class="btn btn-primary" id="editRole">Edit</button></td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function(){
        $(document).on('click','#editRole',function(){
            var Row = $(this).closest('tr');
            var Id = $(Row).find('td').eq(0).html();
            var RoleName = $(Row).find('td').eq(1).html();
            $('#txtRoleId').val(Id);
            $('#txtRolename').val(RoleName);
        });
    });
</script>
